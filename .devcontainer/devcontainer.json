{
  "name": "Kotlin Development Environment (Simple)",
  
  // JDK 17を含むベースイメージを使用
  "image": "mcr.microsoft.com/devcontainers/java:17", 

  "features": {}, // Featureを空にしてエラーを避ける

  // コンテナ作成後にGradleをインストール
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y gradle",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "fwcd.kotlin", 
        "vscjava.vscode-gradle"
      ]
    }
  }
}
